    <div class="selected-concepts" id="selectedConcepts">
        <h3>Conceptos Seleccionados:</h3>
        <!-- Selected concepts will be displayed here -->
    </div>

    <button onclick="generatePDF()">Imprimir PDF</button>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <script>
        // Function to handle the selection and display of selected concepts
        function updateSelectedConcepts() {
            const selectedConceptsDiv = document.getElementById('selectedConcepts');
            selectedConceptsDiv.innerHTML = '<h3>Conceptos Seleccionados:</h3>'; // Reset the selected concepts display

            // Collect selected concepts
            const selects = document.querySelectorAll('select');
            selects.forEach(select => {
                const categoryName = select.previousElementSibling.textContent;
                const selectedOptions = Array.from(select.selectedOptions).map(option => option.value);
                selectedOptions.forEach(option => {
                    const div = document.createElement('div');
                    div.textContent = categoryName + ': ' + option;
                    selectedConceptsDiv.appendChild(div);
                });
            });
        }

        // Attach event listeners to all select elements
        document.querySelectorAll('select').forEach(select => {
            select.addEventListener('change', updateSelectedConcepts);
        });

        // Function to generate PDF
        function generatePDF() {
            const { jsPDF } = window.jspdf;
            const doc = new jsPDF();

            // Get the selected concepts text
            const selectedConcepts = document.getElementById('selectedConcepts').textContent;

            // Add text to PDF
            doc.text(selectedConcepts, 10, 10);

            // Save the PDF
            doc.save('conceptos_seleccionados.pdf');
        }
    </script>
